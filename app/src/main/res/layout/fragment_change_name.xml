<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ChangeNameFragment">

    <EditText
        android:id="@+id/settings_input_name"
        style="@style/editRegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/settings_placeholder_name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/settings_input_surname"
        style="@style/editRegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/settings_placeholder_surname"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_input_name" />
</androidx.constraintlayout.widget.ConstraintLayout>